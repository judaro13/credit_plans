<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Ingresar al Sistema</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <div class="form-group" style='padding-bottom: 40px;'>
          <%= f.label "Email", class: "col-lg-2 control-label"%>
          <div class="col-lg-10">
            <%= f.email_field :email, class: "form-control"%>
          </div>
        </div>

        <div class="form-group" >
          <%= f.label :password, class: "col-lg-2 control-label" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
          <div class="col-lg-10">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        
        <% if devise_mapping.rememberable? -%>
          <div class="form-group" style='padding-bottom: 40px;'>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          </div>
        <% end -%>

      
        <div class="form-group" style='padding-bottom: 40px;'>
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Ingresar", class: "btn btn-primary"%>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>
  <%= render "devise/shared/links" %>
</div>

