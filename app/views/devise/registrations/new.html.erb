

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Crear Nueva Cuenta</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <div class="form-group" style='padding-bottom: 40px;'>
          <%= f.label "Nombre", class: "col-lg-2 control-label"%>
          <div class="col-lg-10">
            <%= f.text_field :name, autofocus: true, class: "form-control"%>
          </div>
        </div>
        
        <div class="form-group" style='padding-bottom: 40px;'>
          <%= f.label "Apellido", class: "col-lg-2 control-label"%>
          <div class="col-lg-10">
            <%= f.text_field :last_name, class: "form-control"%>
          </div>
        </div>
        
        <div class="form-group" style='padding-bottom: 40px;'>
          <%= f.label "Nombre de la Empresa", class: "col-lg-2 control-label"%>
          <div class="col-lg-10">
            <%= f.text_field :company_name, class: "form-control"%>
          </div>
        </div>

        <div class="form-group" style='padding-bottom: 40px;'>
          <%= f.label "Email", class: "col-lg-2 control-label"%>
          <div class="col-lg-10">
            <%= f.email_field :email, class: "form-control"%>
          </div>
        </div>

        <div class="form-group" style='padding-bottom: 40px;'>
          <%= f.label :password, class: "col-lg-2 control-label" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
          <div class="col-lg-10">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group" style='padding-bottom: 40px;'>
          <%= f.label :password_confirmation, class: "col-lg-2 control-label" %> 
          <div class="col-lg-10">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group" style='padding-bottom: 40px;'>
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Crear", class: "btn btn-primary"%>
          </div>
        </div>
        <%= render "devise/shared/links" %>
      </fieldset>
    <% end %>

  </div>
</div>

