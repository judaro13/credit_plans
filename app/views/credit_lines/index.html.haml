
=render 'layouts/side_bar'
    
.col-lg-10
  .panel.panel-primary
    .panel-heading 
      Lineas de Credito
    .panel-body
      .navbar-right{style: "margin-bottom: 10px"}
        = link_to "Nueva linea de Crédito", new_credit_line_path(@account.id), class: "btn btn-success"
      
      %table{style: "margin-top: 10px", class: "table table-striped table-hover"}
        %thead
          %tr.active
            %th Nombre
            %th Porcentaje
            %th 
        %tbody
          - @credit_lines.each do |cl|
            %tr
              %td
                = cl.name
              %td
                = cl.annual_interest
              %td 
                = link_to edit_credit_line_path(@account, cl) do
                  %i.glyphicon.glyphicon-edit
                = link_to credit_line_path(@account, cl), :confirm => '¿Esta seguro de eliminar este elemento?', :method => :delete do
                  %i.glyphicon.glyphicon-trash
      .pagination
        = will_paginate @credit_lines